@model Inmo.Models.Usuario

@{
    ViewData["Title"] = "Details";
}


<div class="row">
    <div class="col-md-12 col-lg-6  mx-auto">


        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Usuario</h3>
            </div>

            <!-- aca inicia el form !-->
            <div class="card-body">

                <div>
                    <dl class="row">
                        
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Mail)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Mail)
                        </dd>
                        

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.RolId)
                        </dt>
                        <dd class="col-sm-10">
                            
                            @RolesData.getById(Model.RolId).Nombre
                        </dd>

                    </dl>
                </div>

            </div>
            <!-- /.card-body -->


            <div class="card-footer">
                <div class="form-group">
                    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" }) |
                    <a asp-action="Index" class="btn btn-dark">regresar a la lista</a>
                </div>
            </div>
            <!-- aca inicia el form !-->
        </div>

    </div>
</div>