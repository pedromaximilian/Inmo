@model IEnumerable<Inmo.Models.Contrato>

@{
    ViewData["Title"] = "Index";
}

<h1>Contratos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Contrato</a>
</p>
<table class="table" id="tabla" style="width:100%">
    <thead>
        <tr>


            <th>
                @Html.DisplayNameFor(model => model.Inmueble.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inquilino.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>


                <td>
                    @Html.DisplayFor(modelItem => item.Inmueble.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Inquilino.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaFin)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Details", "Contrato", new { id = item.Id })">
                        <i class="fi-xnluxl-info"></i>
                    </a>
                    <a class="btn btn-info" href="@Url.Action("Renovar", "Contrato", new { id = item.Id })">
                        <i class="fi-xnluxl-reload"></i>
                    </a>
                    <a class="btn btn-danger" href="@Url.Action("Rescindir", "Contrato", new { id = item.Id })">
                        <i class="fi-xnpuxl-home"></i>
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    <script>

        $("body > div").removeClass("container");
        $("body > div").addClass("container-fluid");
    </script>


}