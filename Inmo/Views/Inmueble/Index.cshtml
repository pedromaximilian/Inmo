@model IEnumerable<Inmo.Models.Inmueble>

@{
    ViewData["Title"] = "Index";
}

<h1>Inmuebles</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Inmueble</a>

    <table class="table" id="tabla" style="width:100%">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ambientes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Uso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ambientes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Uso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        <a class="btn btn-primary" href="@Url.Action("Details", "Inmueble", new { id = item.Id })">
                            <i class="fi-xnluxl-info"></i>

                        </a>
                        <a class="btn btn-warning" href="@Url.Action("Edit", "Inmueble", new { id = item.Id })">
                            <i class="fi-xnluxl-pen-solid"></i>
                        </a>

                        <a class="btn btn-danger" href="@Url.Action("Delete", "Inmueble", new { id = item.Id })">
                            <i class="fi-xnluxl-trash-bin"></i>
                        </a>

                    </td>

                </tr>
            }
        </tbody>
    </table>

    @section Scripts {

        <script>

        $("body > div").removeClass("container");
        $("body > div").addClass("container-fluid");
        </script>


    }
