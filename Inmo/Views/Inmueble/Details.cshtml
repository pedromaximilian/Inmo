@model Inmo.Models.Inmueble

@{
    ViewData["Title"] = "Inmueble";
}

<div class="row">
    <div class="col-md-12 col-lg-6  mx-auto">


        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Inmueble</h3>
            </div>

            <!-- aca inicia el form !-->
            <div class="card-body">

                <div>
                    <dl class="row">

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.PropietarioId)
                        </dt>
                        <dd class="col-sm-9">
                            @ViewBag.dueño
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Direccion)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Direccion)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Ambientes)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Ambientes)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Uso)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Uso)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Tipo)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Tipo)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Precio)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Precio)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Disponible)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Disponible)
                        </dd>
                    </dl>
                </div>

            </div>
            <!-- /.card-body -->


            <div class="card-footer">
                <div class="form-group">
                    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" }) |
                    <a asp-action="Index" class="btn btn-dark">regresar a la lista</a>
                </div>
            </div>
            <!-- aca inicia el form !-->
        </div>

    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="row">
            @if (ViewBag.Imagenes != null)
            {
                foreach (var item in ViewBag.Imagenes)
                {
                    <a href="@item.Uri" data-toggle="lightbox" data-gallery="example-gallery" class="col-sm-4">
                        <img src="@item.Uri" class="img-fluid">
                    </a>
                }


            }


            
        </div>
    </div>
</div>