@model Inmo.Models.Inmueble

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar Nuevo</h1>

<h4>Inmueble</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PropietarioId" class="control-label"></label>
                @*<input asp-for="PropietarioId" class="form-control" />*@
                <select asp-for="PropietarioId" class="form-control seleccion">

                    @foreach (var item in ViewBag.lista)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }


                </select>
                <span asp-validation-for="PropietarioId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ambientes" class="control-label"></label>
                <input asp-for="Ambientes" class="form-control" />
                <span asp-validation-for="Ambientes" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Uso" class="control-label"></label>
                @*<input asp-for="PropietarioId" class="form-control" />*@
                <select asp-for="Uso" class="form-control seleccion">

                    @foreach (var item in ViewBag.Usos)
                    {
                        <option value="@item.id">@item.estado</option>
                    }


                </select>
                <span asp-validation-for="Uso" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                
                <select asp-for="Tipo" class="form-control seleccion">

                    @foreach (var item in ViewBag.Tipos)
                    {
                        <option value="@item.id">@item.estado</option>
                    }
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Disponible" /> @Html.DisplayNameFor(model => model.Disponible)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
