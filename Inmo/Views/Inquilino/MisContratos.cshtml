@model IEnumerable<Inmo.Models.Contrato>

@{
    ViewData["Title"] = "Mis Contratos";
}


<div class="card card-primary">
    <div class="card-header">
        <a asp-action="Create" class="btn btn-secondary float-left">
            <i class="fas fa-plus-circle">
            </i> Agregar Contrato
        </a>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <table id="tabla" class="table table-bordered table-striped dataTable" role="grid">
            <thead>
                <tr>

                    <th>@Html.DisplayNameFor(model => model.FechaInicio)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.FechaFin)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.Monto)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.NombreGarante)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.DniGarante)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.TelefonoGarante)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.MailGarante)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.FechaInicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaFin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Monto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreGarante)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DniGarante)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TelefonoGarante)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MailGarante)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                        <td>
                            <a class="btn btn-primary" href="@Url.Action("Details", "Contrato", new { id = item.Id })">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a class="btn btn-info" href="@Url.Action("Renovar", "Contrato", new { id = item.Id })">
                                <i class="fas fa-redo-alt"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="card-footer">
        
    </div>
</div>
@section Scripts {

    <script>


    </script>


}